<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kaina.anagram.MainActivity">

    <TextView
        android:text="#LEVEL#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/currLevel"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="#TIMER#"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/currLevel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:id="@+id/levelTimer"
        android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/levelTimer"
        android:id="@+id/mainLayout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/levelStatus"
                android:textSize="30sp"
                android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:id="@+id/levelWord"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/levelLetters"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5">
            <Button
                android:text="Previous Level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/prevLevel"
                android:layout_weight="1"
                android:textSize="14sp" />
            <Button
                android:text="Next Level"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/nextLevel"
                android:layout_weight="1"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
